<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/light_orange"
                android:paddingTop="16dp"
                android:paddingBottom="8dp"
              android:orientation="vertical"
                tools:context="jp.co.spajam.androidapp.SettingActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="るすだま"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/dark_gray"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ver 0.0.1"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:text="Twitterアカウント"
        android:textSize="16sp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/layout_login_account"
        android:padding="8dp"
        android:background="@drawable/layout_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_view_label_login_account"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <com.twitter.sdk.android.core.identity.TwitterLoginButton
            android:id="@+id/login_button"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/text_view_label_login_account"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>
    <TextView
        android:id="@+id/text_view_label_pet_account_name"
        android:text="ペットTwttierアカウント"
        android:textSize="16sp"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <RelativeLayout
        android:id="@+id/layout_pet_account_name"
        android:padding="8dp"
        android:background="@drawable/layout_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/edit_pet_account"
            android:hint="ペットアカウント名"
            android:layout_marginTop="8dp"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/button_save_pet_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/button_save_pet_account"
            android:text="保存"
            android:layout_alignBaseline="@id/edit_pet_account"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_debug"
        android:layout_marginTop="32dp"
        android:background="@drawable/layout_row"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/text_view_test"
            android:text="テスト用"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:id="@+id/get_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/text_view_test"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/update_button"
            android:text="Get"
            />
        <Button
            android:id="@+id/update_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/get_button"
            android:layout_centerHorizontal="true"
            android:text="send"
            />
        <Button
            android:id="@+id/update_image_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignBaseline="@id/get_button"
            android:layout_toRightOf="@id/update_button"
            android:text="send_image"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|bottom"
        android:text="Created by The Droemon's"/>
</LinearLayout>
